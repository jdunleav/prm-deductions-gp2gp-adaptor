{
  "swagger": "2.0",
  "info": {
    "description": "Service to handle message generation for GP2GP communication",
    "version": "1.0.0",
    "title": "GP2GP Adaptor"
  },
  "tags": [
    {
      "name": "ehr-request",
      "description": "Send EHR request"
    }
  ],
  "paths": {
    "/ehr-request": {
      "post": {
        "tags": [
          "ehr-request"
        ],
        "summary": "Sends EHR request",
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "patient details",
            "description": "Data about the patient whose EHR is being requested",
            "schema": {
              "$ref": "#/definitions/EhrRequest"
            }
          }
        ],
        "responses": {
          "202": {
            "description": "Successful retrieval"
          },
          "401": {
            "description": "Authorization header missing"
          },
          "403": {
            "description": "Authorization key invalid"
          },
          "422": {
            "description": "Validation failed",
            "schema": {
              "$ref": "#/definitions/ValidationErrors"
            }
          }
        },
        "security": [
          {
            "api_key": []
          }
        ]
      }
    }
  },
  "securityDefinitions": {
    "api_key": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },
  "definitions": {
    "EhrRequest": {
      "type": "object",
      "properties": {
        "nhsNumber": {
          "type": "string"
        },
        "asid": {
          "type": "string"
        },
        "partyKey": {
          "type": "string"
        }
      },
      "required": [
        "nhsNumber",
        "asid",
        "partyKey"
      ]
    },
    "ValidationErrors": {
      "type": "object",
      "properties": {
        "errors": {
          "type": "array",
          "items": {
            "type": "object",
            "description": "An object with the name of the field in error as the key and the error message as the value",
            "properties": {
              "nhsNumber": {
                "type": "string",
                "description": "Error message for the provided NHS number"
              }
            }
          }
        }
      }
    }
  }
}